# CONVENIENCE ALIASES
alias ll="ls -la"

# GIT ALIASES
alias lg="lazygit"
alias gst="git status"
alias ga="git add"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gco="git checkout"

# APP ALIASES
alias tmux="tmux -2"
alias tms="tmux -2 new -s"

# PRODUCTIVITY ALIASES
alias scratchpad="$HOME/bin/scratch.sh"
alias devnotes="cd $HOME/dev-notes && lvim README.md"
alias worklog="gh gist edit 92f0423ccade1927b6490ec98d36990c"
alias journal="gh gist edit d78e04055dcdcf9caba2e26eb4a47bb5"
alias tss="date '+%F'"
alias tsm="date '+%F %a'"
alias tsl="date '+%F %a %H:%M:%S'"

# COPILOT ALIASES
eval "$(github-copilot-cli alias -- "$0")"
