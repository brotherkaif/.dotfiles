# CONVENIENCE ALIASES
alias ll="ls -la"
alias sync-config="ansible-pull -U https://github.com/brotherkaif/ansible_config.git"
alias sync-dotfiles="ansible-pull -U https://github.com/brotherkaif/ansible_config.git --tags dotfiles"
alias sync-local-config="ansible-playbook $HOME/ansible_config/local.yml"
alias sync-local-dotfiles="ansible-playbook $HOME/ansible_config/local.yml --tags dotfiles"

# GIT ALIASES
alias lg="lazygit"
alias gst="git status"
alias ga="git add"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gco="git checkout"

# APP ALIASES
alias tmux="tmux -2"
alias tms="tmux -2 new -s"

# PRODUCTIVITY ALIASES
alias sp="$HOME/bin/scratch.sh"
alias dn="cd $HOME/dev-notes && vim ."
alias wl="gh gist edit 92f0423ccade1927b6490ec98d36990c"
alias tss="date '+%F'"
alias tsm="date '+%F %a'"
alias tsl="date '+%F %a %H:%M:%S'"

# CRYPTO ALIASES
alias xmr="monero-wallet-cli --config-file ~/.bitmonero/bitmonero.conf"
