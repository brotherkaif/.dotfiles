[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "create": [
      "~/projects",
      "~/playground"
    ]
  },
  {
    "link": {
      "~/.bash_profile": "bash/.bash_profile",
      "~/.bashrc": "bash/.bashrc",
      "~/.config/devdocs": "devdocs",
      "~/.config/lazygit": "lazygit",
      "~/.config/lynx": "lynx",
      "~/.config/newsboat": "newsboat",
      "~/.config/nvim": "nvim",
      "~/.config/git": "git",
      "~/.inputrc": "bash/.inputrc",
      "~/.shell_aliases": "shell/.shell_aliases",
      "~/.shell_common": "shell/.shell_common",
      "~/.tmux.conf": "tmux/.tmux.conf",
      "~/.zshrc": "zsh/.zshrc"
    }
  },
  {
    "shell": [
      {
        "command": "./scripts/setup-codespace.sh",
        "stdin": true,
        "stdout": true,
        "description": "Setup script for GitHub Codespace"
      },
      {
        "command": "./scripts/setup-debian.sh",
        "stdin": true,
        "stdout": true,
        "description": "Setup script for Debian"
      }
    ]
  }
]
