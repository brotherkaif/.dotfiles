[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.bash_profile": "bash/.bash_profile",
      "~/.bashrc": "bash/.bashrc",
      "~/.bitmonero": "monero",
      "~/.config/devdocs": "devdocs",
      "~/.config/git/git-commit-template.txt": "git/git-commit-template.txt",
      "~/.config/lazygit": "lazygit",
      "~/.config/lynx": "lynx",
      "~/.config/newsboat": "newsboat",
      "~/.config/nvim": "nvim",
      "~/.gitconfig": "git/.gitconfig",
      "~/.inputrc": "bash/.inputrc",
      "~/.shell_aliases": "shell/.shell_aliases",
      "~/.shell_common": "shell/.shell_common",
      "~/.tmux.conf": "tmux/.tmux.conf",
      "~/.zshrc": "zsh/.zshrc"
    }
  },
  {
    "create": [
      "~/projects",
      "~/playground",
      "~/scratchpads",
      "~/.local/bin"
    ]
  },
  {
    "shell": [
      {
        "command": "./scripts/bin/setup_debian.sh",
        "stdin": true,
        "stdout": true,
        "description": "Running Debian setup script"
      },
      {
        "command": "./scripts/bin/setup_darwin.sh",
        "stdin": true,
        "stdout": true,
        "description": "Running Darwin setup script"
      }
    ]
  }
]
